<%= simple_form_for @recipe do |f| %>
  <div class="form-section">
    <%= f.input :title, label: "レシピタイトル", input_html: { placeholder: "例：ふわとろオムライス" } %>
    <%= f.input :description, label: "レシピの説明", input_html: { placeholder: "例：簡単にできるふわふわオムライスです" } %>
  </div>

  <fieldset class="form-section">
    <legend><h2>🧂 材料</h2></legend>
    <%= f.input :materials_text, as: :text, label: "材料（元レシピからコピペ）", input_html: { rows: 6, placeholder: "例：\n卵 2個\n牛乳 100ml\n砂糖 大さじ2" } %>
  </fieldset>

  <fieldset class="form-section">
    <legend><h2>📝 手順</h2></legend>
   <%= f.input :steps_text, as: :text, label: "手順（元レシピからコピペ）", input_html: { rows: 8, placeholder: "例：\n① 卵と牛乳を混ぜる。\n② 砂糖を加える。\n③ 弱火で加熱する。" } %>
  </fieldset>

  <div style="margin-top: 2rem;">
    <%= f.button :submit, "✅ レシピを登録する", class: "btn btn-main" %>
  </div>
<% end %>
