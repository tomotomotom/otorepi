<h1><%= @recipe.title %></h1>

<p><%= simple_format(@recipe.description) if @recipe.description.present? %></p>

<hr>

<h2>🧂 材料</h2>
<div class="ingredient-block">
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%= ingredient.name %>：<%= ingredient.quantity %></li>
    <% end %>
  </ul>
</div>

<h2>📝 手順</h2>
<div class="step-block">
  <ol>
    <% @recipe.steps.order(:number).each do |step| %>
      <li><%= step.content %></li>
    <% end %>
  </ol>
</div>

<hr>

<div>
  <%= button_to '🔊 読み上げモード',
                read_recipe_path(@recipe),
                method: :get,
                class: 'btn btn-secondary',
                form: { class: 'inline-form' } %>

  <%= button_to '✏️ 編集',
                edit_recipe_path(@recipe),
                method: :get,
                class: 'btn btn-primary',
                form: { class: 'inline-form' } %>

  <%= button_to '🗑️ 削除',
                recipe_path(@recipe),
                method: :delete,
                data: { turbo_confirm: '本当に削除しますか？' },
                class: 'btn btn-danger',
                form: { class: 'inline-form' } %>

  <%= button_to '🔙 一覧に戻る',
                recipes_path,
                method: :get,
                class: 'btn btn-main',
                form: { class: 'inline-form' } %>
</div>
